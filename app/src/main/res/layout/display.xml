<com.android.calculator2.view.DisplayOverlay
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/display"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_card"
    android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <include layout="@layout/graph_display"/>

        <RelativeLayout
            android:id="@+id/mainDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/display_background_color">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/historyRecycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <com.android.calculator2.view.display.AdvancedDisplay
                android:id="@+id/formula"
                style="@style/Theme.Calculator.Display.Main.Formula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/historyRecycler"
                android:inputType="text|textNoSuggestions"
                android:fillViewport="true"
                android:textColor="@color/display_formula_text_color" />

            <com.android.calculator2.view.display.AdvancedDisplay
                android:id="@+id/result"
                style="@style/Theme.Calculator.Display.Main.Result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/formula"
                android:inputType="none"
                android:focusable="false"
                android:fillViewport="true"
                android:textColor="@color/display_result_text_color" />
        </RelativeLayout>

    </FrameLayout>

</com.android.calculator2.view.DisplayOverlay>

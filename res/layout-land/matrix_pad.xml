<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simplePad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <com.android.calculator2.view.ColorButton
            android:id="@+id/digit7"
            android:text="@string/digit7"
            style="?digit_button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/digit8"
            android:text="@string/digit8"
            style="?digit_button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/digit9"
            android:text="@string/digit9"
            style="?digit_button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/minus_col"
            android:text="@string/minus_col"
            android:textSize="25sp"
            style="?button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/plus"
            android:text="@string/plus"
            android:hint="@string/minus"
            android:textColorHint="@android:color/transparent"
            style="?button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/matrix"
            android:text="@string/matrix_new"
            style="?button_style" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <com.android.calculator2.view.ColorButton
            android:id="@+id/digit4"
            android:text="@string/digit4"
            style="?digit_button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/digit5"
            android:text="@string/digit5"
            style="?digit_button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/digit6"
            android:text="@string/digit6"
            style="?digit_button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/plus_col"
            android:text="@string/plus_col"
            android:textSize="25sp"
            style="?button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/mul"
            android:text="@string/mul"
            android:hint="@string/div"
            android:textColorHint="@android:color/transparent"
            style="?button_style" />
        <ImageButton
            android:id="@+id/easter"
            android:src="?egg"
            style="?button_style"
            android:contentDescription="@null" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <com.android.calculator2.view.ColorButton
            android:id="@+id/digit1"
            android:text="@string/digit1"
            style="?digit_button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/digit2"
            android:text="@string/digit2"
            style="?digit_button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/digit3"
            android:text="@string/digit3"
            style="?digit_button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/minus_row"
            android:text="@string/minus_row"
            android:textSize="25sp"
            style="?button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/matrix_transpose"
            android:text="@string/matrix_transpose"
            style="?button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/next"
            android:text="@string/next"
            android:textSize="@dimen/btn_function_text_size"
            style="?button_style" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <com.android.calculator2.view.ColorButton
            android:id="@+id/dot"
            android:text="@string/dot"
            style="?digit_button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/digit0"
            android:text="@string/digit0"
            style="?digit_button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/det"
            android:text="@string/det"
            android:textSize="@dimen/btn_function_text_size"
            style="?button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/plus_row"
            android:text="@string/plus_row"
            android:textSize="25sp"
            style="?button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/matrix_inverse"
            android:text="@string/matrix_inverse"
            style="?button_style" />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/equal"
            android:text="@string/equal"
            style="?equal_button_style" />
    </LinearLayout>
</LinearLayout>

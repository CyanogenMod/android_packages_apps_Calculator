<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/hexPad"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_gravity="center"
              >

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <com.android.calculator2.view.ColorButton
            android:id="@+id/A"
            android:text="@string/A"
            style="@style/digit_button_style"
            />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/B"
            android:text="@string/B"
            style="@style/digit_button_style"
            />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/C"
            android:text="@string/C"
            style="@style/digit_button_style"
            />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/D"
            android:text="@string/D"
            style="@style/digit_button_style"
            />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/E"
            android:text="@string/E"
            style="@style/digit_button_style"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <com.android.calculator2.view.ColorButton
            android:id="@+id/F"
            android:text="@string/F"
            android:layout_weight="3"
            style="@style/btn_digit_cell_style"
            />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/dec"
            android:text="@string/dec"
            android:tag="@string/decDesc"
            android:layout_weight="4"
            style="@style/btn_function_cell_style"
            />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/bin"
            android:text="@string/bin"
            android:tag="@string/binDesc"
            android:layout_weight="4"
            style="@style/btn_function_cell_style"
            />
        <com.android.calculator2.view.ColorButton
            android:id="@+id/hex"
            android:text="@string/hex"
            android:tag="@string/hexDesc"
            android:layout_weight="4"
            style="@style/btn_function_cell_style"
            />
    </LinearLayout>
</LinearLayout>